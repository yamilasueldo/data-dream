  verificarAdmin,
  upload.single('imagen'),
  async (req, res) => {
    try {
      console.log('ğŸ“ Creando nuevo producto...');
      console.log('ğŸ“Š Datos recibidos:', req.body);
      console.log('ğŸ“ Archivo:', req.file ? req.file.filename : 'Sin archivo');

